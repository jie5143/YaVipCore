                    <TabItem Header="发现音乐">
                        <subModel:DiscoveryView />
                    </TabItem>
                    <TabItem Header="下载管理">
                        <subModel:DownloadView />
                    </TabItem>
                    <TabItem Header="系统设置">
                        <subModel:SettingView />
                    </TabItem>
                </TabControl>
            </Grid>

