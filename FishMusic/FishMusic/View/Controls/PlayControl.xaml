                                                       AllowRepeatRegions="False">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding RegistCmd}" CommandParameter="{Binding ElementName=SoundVisualControl}" />
                    </i:EventTrigger>
                    --><!--<i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding RegistCmd}" CommandParameter="{Binding ElementName=SoundVisualControl}" />
                    </i:EventTrigger>--><!--
                </i:Interaction.Triggers>
            </wpfSoundVisualizationLib:WaveformTimeline>-->

            <!--<wpfSoundVisualizationLib:WaveformTimeline x:Name="ProcessSoundVisualControl"
                                                       Height="100"
                                                       
                                                       TimelineTickBrush="LightGray"
                                                       IsHitTestVisible="True"
                                                       LeftLevelBrush="{StaticResource AccentColorBrush}"
                                                       RightLevelBrush="Transparent"
                                                       CenterLineThickness="0"
                                                       ProgressBarThickness="1"
                                                       ProgressBarBrush="{StaticResource AccentColorBrush}"
                                                       AllowRepeatRegions="False">
                <wpfSoundVisualizationLib:WaveformTimeline.Width>
                    <MultiBinding Converter="{StaticResource PrecentConverter}">
                        <Binding Path="PlayProcess"/>
                    </MultiBinding>
                </wpfSoundVisualizationLib:WaveformTimeline.Width>
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding RegistCmd}" CommandParameter="{Binding ElementName=ProcessSoundVisualControl}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </wpfSoundVisualizationLib:WaveformTimeline>-->
        </Grid>
    </Grid>
</UserControl>
